<Window x:Class="Einmalzahlung200.WindowSigned"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Einmalzahlung200"
        mc:Ignorable="d"
        Title="Ihr Konto" Height="500" Width="400"
        Icon="C:\Users\justi\Desktop\Einmalzahlung200\Ressourcen\bundesamt.ico">
<Grid>
        <Label 
        Name="LogInBeta"  
        Content="Erfolgreich eingeloggt!"  
        Width="140" Height="30"  
        Canvas.Left="0" Canvas.Top="0"  
        FontSize="14" FontFamily="Calibri"  
        FontWeight="Bold" Margin="0,0,0,0"
        VerticalAlignment="Center"/>

        <Button 
            x:Name="SignOut"
            FontWeight="Bold"
            Height="30" Width="100"  
            BorderThickness="0"
           Content="Abmelden"  
           Margin="0,75,0,0" VerticalAlignment="center"  
           HorizontalAlignment="Center"
           Click="SignOut_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
